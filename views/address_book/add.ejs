<%- include('../parts/html-head') %> <%- include('../parts/navbar') %>
<div class="container">
	<div class="row">
		<div id="infoBar" class="alert alert-success" role="alert" style="display: none;">
			A simple primary alertâ€”check it out!
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="card w-50 mx-auto">
				<div class="card-body">
					<h5 class="card-title">Adding address book</h5>
					<form name="form1" onsubmit="return formCheck()">
						<div class="form-group">
							<label for="name">name</label>
							<input type="text" class="form-control" id="name" name="name" required />
							<small id="nameHelp" class="form-text text-muted"></small>
						</div>
						<div class="form-group">
							<label for="email">email</label>
							<input type="email" class="form-control" id="email" name="email" />
							<small id="emailHelp" class="form-text text-muted"></small>
						</div>
						<div class="form-group">
							<label for="mobile">mobile</label>
							<input type="text" class="form-control" id="mobile" name="mobile" />
							<small id="mobileHelp" class="form-text text-muted"></small>
						</div>
						<div class="form-group">
							<label for="birthday">birthday</label>
							<input type="text" class="form-control" id="birthday" name="birthday" />
							<small id="birthdayHelp" class="form-text text-muted"></small>
						</div>
						<div class="form-group">
							<label for="address">address</label>
							<textarea class="form-control" name="address" id="address" cols="30" rows="3"></textarea>
							<small id="addressHelp" class="form-text text-muted"></small>
						</div>

						<button type="submit" class="btn btn-primary">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<%- include('../parts/html-foot') %>
</div>
<script>
	const infoBar = $("#infoBar");
	const rules = {
		name: {
			require: true,
			pattern: /.{2,}/,
			info: "Please input more than 2 words"
		}
	};

	$(".form-control").on("blur", function(event) {
		console.log(event.target);
	});

	function formCheck() {
		let isPass = true;
		infoBar.hide();

		$("#nameHelp").html("");

		let nameVal = $("#name").val();
		if (!nameVal || nameVal.length < 2) {
			$("#nameHelp").html("Please input the right name.");
			isPass = false;
		}

		if (isPass) {
			const fd = new FormData(document.form1);
			fetch("/address_book/add", {
				method: "POST",
				body: fd
			})
				.then(r => r.json())
				.then(obj => {
					console.log(obj);

					if (obj.success) {
						infoBar
							.removeClass("alert-danger")
							.addClass("alert-success")
							.text("Update success");
					} else {
						infoBar
							.removeClass("alert-success")
							.addClass("alert-danger")
							.text(obj.error);
					}
					infoBar.show();
				});
		}
		return false;
	}
</script>
